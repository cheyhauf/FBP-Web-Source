<%- include('../partials/head') %>
<%- include('../css/NavbarStyles') %>
<%- include('../css/formStyles') %>

    <title>FBP</title>
</head>

<body>
    <%- include ('../partials/Navbar', { userAuthentication: null}) %>
    
    <div class="login-box">
        <h2>Login</h2>
        <% if (message) { %>
            <div class="alert">
                <%= message %>
            </div>
        <% } %>
        <form method="POST" action="/login">
            <div class="user-box">
                <input type="text" id="username" name="username" autocomplete="username" min="4" max="32" required>
                <label for="username">Username</label>
            </div>
            <div class="user-box">
                <input type="password" id="password" name="password" autocomplete="current-password" min="8" max="64" required>
                <label for="password">Password</label>
            </div>
            <button type="submit">Login</button>
        </form>
    </div>
</body>



