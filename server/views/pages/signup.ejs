<%- include('../partials/head') %>
<%- include('../css/NavbarStyles') %>
<%- include('../css/formStyles') %>

    <title>FBP</title>
</head>


<body>
    <%- include ('../partials/Navbar', { userAuthentication: null}) %>

    <div class="login-box">
        <h2>Register</h2>
        <% if (error) { %>
            <div class="alert">
                <%= error.message %>
            </div>
            <% } %>
        <form method="POST" action="/register">
            <div class="user-box">
                <input type="text" id="username" name="username" autocomplete="username" min="4" max="32" required>
                <label for="username">Username</label>
            </div>
            <div class="user-box">
                <input type="password" id="password" name="password" autocomplete="new-password" min="8" max="64" required>
                <label for="password">Password</label>
            </div>
            <div class="user-box">
                <input type="password" id="confirmPassword" name="confirmPassword" autocomplete="new-password" min="8" max="64" required>
                <label for="confirmPassword">Confirm Password</label>
            </div>

            <div class="color-selection">
                <div class="color-option" id="color1"></div>
                <div class="color-option" id="color2"></div>
                <div class="color-option" id="color3"></div>
                <div class="color-option" id="color4"></div>
                <div class="color-option" id="color5"></div>
            </div>
            <input type="hidden" id="selectedColor" name="selectedColor" value="">
            <style>

                .color-selection {
                    display: flex;
                    justify-content: space-between;
                    width: 100%;
                    max-width: 300px;
                }

                .color-option {
                    width: 30px;
                    height: 30px;
                    border-radius: 50%;
                    cursor: pointer;
                    box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
                }

                #color1 { background-color: #ff0000; }
                #color2 { background-color: #00ff00; }
                #color3 { background-color: #0000ff; }
                #color4 { background-color: #ffff00; }
                #color5 { background-color: #ff00ff; }

                .color-option.selected {
                    box-shadow: 0 0 10px rgba(255, 255, 255, 0.5);
                }

            </style>

            <button type="submit">Register</button>
        </form>
    </div>
    <script>

        document.querySelectorAll('.color-option').forEach((option) => {
                option.addEventListener('click', (event) => {
                    // Remove the 'selected' class from any other color option
                    document.querySelectorAll('.color-option.selected').forEach((selected) => {
                        selected.classList.remove('selected');
                    });

                    // Add the 'selected' class to the clicked color option
                    event.target.classList.add('selected');

                    // Update the hidden input field with the selected color ID
                    document.getElementById('selectedColor').value = event.target.id;
                });
            });

    </script>
</body>
